{
  "name": "image-nexus",
  "version": "0.1.0",
  "description": "Image Nexus â€” prompt/metadata viewer for AI image output folders.",
  "author": "PSGRaptor",
  "license": "MIT",
  "main": "dist/main/main.js",
  "private": true,
  "type": "commonjs",
  "scripts": {
    "dev": "concurrently -k -n MAIN,RENDERER,ELECTRON -c cyan,magenta,green \"npm:dev:main\" \"npm:dev:renderer\" \"wait-on tcp:5173 && electron .\"",
    "dev:main": "tsup --watch",
    "dev:renderer": "vite --config renderer/vite.config.ts",
    "build": "rimraf dist && tsup && vite build --config renderer/vite.config.ts",
    "dist": "npm run build && electron-builder --config electron-builder.json",
    "lint": "eslint . --ext .ts,.tsx",
    "postinstall": "node scripts/ensure-config.js"
  },
  "dependencies": {
    "chokidar": "^3.6.0",
    "exifr": "^7.1.3",
    "fast-glob": "^3.3.2",
    "fs-extra": "^11.2.0",
    "lodash.debounce": "^4.0.8",
    "mime-types": "^2.1.35",
    "node-crc": "^1.2.2",
    "png-chunks-extract": "^1.0.0",
    "png-chunk-text": "^1.0.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sharp": "^0.33.4",
    "slash": "^5.1.0",
    "tailwind-merge": "^2.5.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/lodash.debounce": "^4.0.9",
    "@types/mime-types": "^2.1.4",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "electron": "^30.0.9",
    "electron-builder": "^24.13.3",
    "eslint": "^9.9.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.9",
    "trash": "^8.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "vite": "^5.4.2",
    "wait-on": "^7.2.0"
  }
}
