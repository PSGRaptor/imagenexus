  "scripts": {
    "dev": "npx electron-forge start",
    "start": "npx electron-forge start",
    "make": "npx electron-forge make",
    "build:vite": "vite build -c vite.main.config.ts && vite build -c vite.preload.config.ts && vite build -c renderer/vite.config.ts",
    "build": "npm run build:vite && npx electron-builder -c electron-builder.json",
    "package": "npm run build:vite && npx electron-builder --dir -c electron-builder.json",
    "dist:win": "npm run build:vite && npx electron-builder -w -c electron-builder.json",
    "lint": "tsc --noEmit",
    "clean": "rimraf .vite build dist out node_modules",
    "icons": "node scripts/generate-icons.mjs"
